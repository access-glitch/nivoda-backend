SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ADMIN_TOKEN=your_shopify_admin_token
SHOPIFY_STOREFRONT_TOKEN=your_shopify_storefront_token
SHOPIFY_API_VERSION=2025-01
NIVODA_API_KEY=your_nivoda_api_key
# Optional alternative to NIVODA_API_KEY:
NIVODA_USERNAME=
NIVODA_PASSWORD=
NIVODA_API_URL=https://integrations.nivoda.net/api/diamonds
FRONTEND_URL=http://localhost:5173
PORT=3000

# Gold pricing configuration
# Example external endpoint should return a numeric value (default path: ratePerGram)
GOLD_RATE_API_URL=
GOLD_RATE_API_KEY=
GOLD_RATE_API_KEY_HEADER=x-api-key
GOLD_RATE_API_KEY_PREFIX=
GOLD_RATE_RESPONSE_PATH=ratePerGram
GOLD_RATE_MULTIPLIER=1
# Manual fallback used whenever live API is unavailable
MANUAL_GOLD_RATE=75
GOLD_RATE_CURRENCY=USD

# Platinum pricing configuration (same payload rules as gold)
PLATINUM_RATE_API_URL=
PLATINUM_RATE_API_KEY=
PLATINUM_RATE_API_KEY_HEADER=x-api-key
PLATINUM_RATE_API_KEY_PREFIX=
PLATINUM_RATE_RESPONSE_PATH=ratePerGram
PLATINUM_RATE_MULTIPLIER=1
MANUAL_PLATINUM_RATE=45
PLATINUM_RATE_CURRENCY=USD
